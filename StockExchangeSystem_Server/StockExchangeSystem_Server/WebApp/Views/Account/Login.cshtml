@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<!-- Sign In Start -->
        <div class="container-fluid">
            <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                    <form asp-action="Login" class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <a asp-controller="Home" asp-action="Index">
                                <h3 class="text-primary"><i class="fa fa-user-edit me-2"></i>DarkPan</h3>
                            </a>
                            <h3>Sign In</h3>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" id="eMail">
                            <label asp-for="Email">Email address</label>
                        </div>
                        <div class="form-floating mb-4">
                            <input asp-for="Password" name="pass" class="form-control">
                            <label asp-for="Password">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        @if(TempData["Error"] is not null){
                        <div class="d-none align-items-center justify-content-between flex-wrap">
                            <h1>Sorry!</h1>
                            <h4>@TempData["Error"]</h4>
                        </div>
                        }
                       
                        <button type="submit" class="btn btn-primary shadow-none py-3 w-100 mb-4">Sign In</button>
                        <p class="text-center mb-0">Don't have an Account? <a href="signup.php">Sign Up</a></p>
                    </form>
                </div>
            </div>
        </div>
